#=== MENU ===#
a)	"git_init.pl"
b)	"git_push.pl"

#=== COMMENT ===#
a)	"git_init.pl" can "git init","git add","git commit","git remote add" and "git push" for the 1st time.
a1)	This program need local path and remote path.
 
b)	"git_push.pl" can "git rm --cashed filename","git commit -m sentence","git push".

